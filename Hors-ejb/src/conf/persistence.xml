<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Hors-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/hors</jta-data-source>
    <class>entity.RoomEntity</class>
    <class>entity.RoomTypeEntity</class>
    <class>entity.RoomTypeAvailability</class>
    <class>entity.NormalRate</class>
    <class>entity.PeakRateEntity</class>
    <class>entity.PromotionRateEntity</class>
    <class>entity.PublishedRateEntity</class>
    <class>entity.RoomRateEntity</class>
    <class>entity.PaymentEntity</class>
    <class>entity.RoomReservationEntity</class>
    <class>entity.RoomReservationLineItemEntity</class>
    <class>entity.RoomAllocationExceptionEntity</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
